<Application
    x:Class="MikoMe.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    xmlns:helpers="using:MikoMe.Helpers">

    <Application.Resources>
        <ResourceDictionary>

            <!-- ✅ WinUI default resources -->
            <ResourceDictionary.MergedDictionaries>
                <controls:XamlControlsResources/>
            </ResourceDictionary.MergedDictionaries>

            <!-- ✅ Fonts -->
            <FontFamily x:Key="HanziFont">Microsoft YaHei UI</FontFamily>
            <FontFamily x:Key="MikoFont">
                Segoe UI Variable, Segoe UI, Noto Sans CJK SC, Microsoft YaHei UI
            </FontFamily>

            <!-- ✅ Global brushes -->
            <SolidColorBrush x:Key="MikoNavPaneBrush" Color="#000000"/>
            <SolidColorBrush x:Key="MikoNavForegroundBrush" Color="#FFFFFF"/>

            <!-- NavigationView colors -->
            <SolidColorBrush x:Key="NavigationViewExpandedPaneBackground" Color="#000000"/>
            <SolidColorBrush x:Key="NavigationViewDefaultPaneBackground"  Color="#000000"/>
            <SolidColorBrush x:Key="NavigationViewItemForeground"          Color="#FFFFFF"/>
            <SolidColorBrush x:Key="NavigationViewItemForegroundSelected"  Color="#FFFFFF"/>
            <SolidColorBrush x:Key="NavigationViewItemForegroundPointerOver" Color="#FFF2F2F2"/>

            <!-- Text and progress ring on light backgrounds -->
            <SolidColorBrush x:Key="MikoTextOnLight" Color="#111111"/>
            <SolidColorBrush x:Key="MikoRingStroke" Color="#111111"/>

            <!-- Accent color (orange) -->
            <SolidColorBrush x:Key="MikoPrimaryBrush" Color="#FF7B1A"/>

            <!-- ✅ Button styles -->
            <Style x:Key="MikoAccentButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="{StaticResource MikoPrimaryBrush}"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="Padding" Value="10,6"/>
                <Setter Property="CornerRadius" Value="8"/>
            </Style>

            <Style x:Key="MikoIconButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground" Value="#666"/>
                <Setter Property="BorderBrush" Value="#BBBBBB"/>
                <Setter Property="BorderThickness" Value="2"/>
                <Setter Property="Padding" Value="16"/>
                <Setter Property="CornerRadius" Value="12"/>
                <Setter Property="HorizontalAlignment" Value="Center"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Grid>
                                <Border Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="{TemplateBinding CornerRadius}"/>
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"
                                                  Foreground="{TemplateBinding Foreground}"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- ✅ NavigationView item style -->
            <Style TargetType="controls:NavigationViewItem">
                <Setter Property="Foreground" Value="{StaticResource MikoNavForegroundBrush}"/>
            </Style>

            <!-- ✅ Alternating row converter for BrowsePage -->
            <helpers:AlternatingRowConverter x:Key="AlternatingRowConverter"/>

        </ResourceDictionary>
    </Application.Resources>
</Application>
