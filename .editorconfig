# .editorconfig (solution root)
root = true

[*]
charset = utf-8
end_of_line = crlf
insert_final_newline = true
indent_style = space
indent_size = 4
tab_width = 4
trim_trailing_whitespace = true

[*.xaml]
# Some XAML may contain non-ASCII; keep it UTF-8
charset = utf-8

[*.{csproj,props,targets}]
charset = utf-8

[*.{cmd,bat,ps1}]
end_of_line = crlf

[*.{md,txt}]
end_of_line = lf
trim_trailing_whitespace = false
