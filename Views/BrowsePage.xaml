<Page
    x:Class="MikoMe.Views.BrowsePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:models="using:MikoMe.Models"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid RowSpacing="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="Auto"/>
            <!-- Search + Sorting -->
            <RowDefinition Height="*"/>
            <!-- Vocabulary list -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#FFF3E6D8" Padding="24,18">
            <TextBlock Text="Your vocabulary"
                       FontSize="28"
                       FontWeight="SemiBold"
                       Foreground="Black"/>
        </Border>

        <!-- Search + Sorting toolbar -->
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    Padding="12"
                    Spacing="8"
                    VerticalAlignment="Center">

            <!-- Search box -->
            <TextBox x:Name="SearchBox"
                     Width="250"
                     PlaceholderText="Search (Hanzi, Pinyin, English)..."
                     TextChanged="SearchBox_TextChanged"/>

            <!-- Spacer with sort buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="6">
                <!-- Old → New -->
                <Button Width="36" Height="36"
                        Click="SortOldToNew_Click"
                        ToolTipService.ToolTip="Oldest first">
                    <Image Source="ms-appx:///Assets/icon_arrow-up_black.png"
                        Width="12" Height="12"
                        Stretch="Uniform"/>
                    <!-- Up arrow -->
                </Button>

                <!-- New → Old -->
                <Button Width="36" Height="36"
                        Click="SortNewToOld_Click"
                        ToolTipService.ToolTip="Newest first">
                    <Image Source="ms-appx:///Assets/icon_arrow-down_black.png"
                        Width="12" Height="12"
                        Stretch="Uniform"/>
                    <!-- Down arrow -->
                </Button>

                <!-- Hanzi sort -->
                <Button Width="36" Height="36"
                        Click="SortHanziAZ_Click"
                        ToolTipService.ToolTip="Sort Hanzi A→Z">
                    <Image Source="ms-appx:///Assets/icon_han-arrow-up_black.png"
                        Width="12" Height="12"
                        Stretch="Uniform"/>
                </Button>

                <!-- Roman sort -->
                <Button Width="36" Height="36"
                        Click="SortHanziZA_Click"
                        ToolTipService.ToolTip="Sort Hanzi Z→A">
                    <Image Source="ms-appx:///Assets/icon_han-arrow-down_black.png"
                        Width="12" Height="12"
                        Stretch="Uniform"/>
                </Button>
            </StackPanel>
        </StackPanel>

        <!-- Vocabulary list -->
        <ListView Grid.Row="2"
                  ItemsSource="{x:Bind FilteredCards, Mode=OneWay}"
                  SelectionMode="None"
                  ContainerContentChanging="ListView_ContainerContentChanging">

            <!-- Force ListViewItem background to be visible -->
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListViewItem">
                                <Border x:Name="RootBorder"
                                        Background="{TemplateBinding Background}"
                                        Padding="{TemplateBinding Padding}">
                                    <ContentPresenter/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListView.ItemContainerStyle>

            <ListView.ItemTemplate>
                <DataTemplate x:DataType="models:Card">
                    <StackPanel Padding="12" Spacing="4">
                        <!-- Hanzi -->
                        <TextBlock Text="{x:Bind Word.Hanzi}"
                                   FontSize="20"
                                   FontWeight="SemiBold"/>
                        <!-- Pinyin -->
                        <TextBlock Text="{x:Bind Word.Pinyin}"
                                   FontStyle="Italic"
                                   Foreground="Gray"/>
                        <!-- English -->
                        <TextBlock Text="{x:Bind Word.English}"
                                   Foreground="DimGray"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
