<Page
    x:Class="MikoMe.Views.HelpPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MikoMe.Views"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <!-- Page resources (warm paper header color used on other pages) -->
    <Page.Resources>
        <SolidColorBrush x:Key="HeaderBrush" Color="#FFF3E6D8" />
        <Style x:Key="SectionTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Margin" Value="0,16,0,8" />
            <Setter Property="Foreground" Value="Black" />
        </Style>
        <Style x:Key="Bullet" TargetType="TextBlock">
            <Setter Property="TextWrapping" Value="Wrap" />
            <Setter Property="Margin" Value="0,4,0,4" />
            <Setter Property="Foreground" Value="Black" />
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource HeaderBrush}" Padding="24,18">
            <TextBlock
                Text="Help &amp; keyboard shortcuts"
                FontSize="28"
                FontWeight="SemiBold"
                Foreground="Black" />
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" Padding="24,16" HorizontalScrollBarVisibility="Disabled">
            <StackPanel Spacing="4">

                <!-- Global -->
                <TextBlock Style="{StaticResource SectionTitle}" Text="Global" />
                <TextBlock Style="{StaticResource Bullet}">
                    <Run Text="Paste from clipboard: "/><Run FontWeight="SemiBold" Text="Ctrl + V"/>
                </TextBlock>

                <!-- Add page -->
                <TextBlock Style="{StaticResource SectionTitle}" Text="Add word or sentence" />
                <TextBlock Style="{StaticResource Bullet}">
                    <Run Text="Paste image/text into Hanzi: "/><Run FontWeight="SemiBold" Text="Ctrl + V"/>
                </TextBlock>
                <TextBlock Style="{StaticResource Bullet}">
                    <Run Text="Add (submit): "/><Run FontWeight="SemiBold" Text="Enter"/>
                </TextBlock>

                <!-- Translate page -->
                <TextBlock Style="{StaticResource SectionTitle}" Text="Translate" />
                <TextBlock Style="{StaticResource Bullet}">
                    <Run Text="Paste into input: "/><Run FontWeight="SemiBold" Text="Ctrl + V"/>
                </TextBlock>
                <TextBlock Style="{StaticResource Bullet}">
                    <Run Text="Translate: "/><Run FontWeight="SemiBold" Text="Enter"/>
                </TextBlock>
                <TextBlock Style="{StaticResource Bullet}">
                    <Run Text="Swap languages: "/><Run FontWeight="SemiBold" Text="Alt + S"/>
                </TextBlock>
                <TextBlock Style="{StaticResource Bullet}">
                    <Run Text="Copy translated text: "/><Run FontWeight="SemiBold" Text="Ctrl + C"/>
                </TextBlock>
                <TextBlock Style="{StaticResource Bullet}">
    <Run Text="Paste into input: "/><Run FontWeight="SemiBold" Text="Ctrl + V"/>
                </TextBlock>
                <TextBlock Style="{StaticResource Bullet}">
    <Run Text="Play audio (speak): "/><Run FontWeight="SemiBold" Text="Ctrl + S"/>
                </TextBlock>


                <!-- Session page -->
                <TextBlock Style="{StaticResource SectionTitle}" Text="Session" />
                <TextBlock Style="{StaticResource Bullet}">
                    <Run Text="Reveal/next: "/><Run FontWeight="SemiBold" Text="Space"/>
                </TextBlock>
                <TextBlock Style="{StaticResource Bullet}">
                    <Run Text="Mark known: "/><Run FontWeight="SemiBold" Text="K"/>
                </TextBlock>
                <TextBlock Style="{StaticResource Bullet}">
                    <Run Text="Mark donâ€™t know: "/><Run FontWeight="SemiBold" Text="D"/>
                </TextBlock>
                <TextBlock Style="{StaticResource Bullet}">
                    <Run Text="Speak current: "/><Run FontWeight="SemiBold" Text="S"/>
                </TextBlock>

                <!-- Browse page -->
                <TextBlock Style="{StaticResource SectionTitle}" Text="Browse" />
                <TextBlock Style="{StaticResource Bullet}">
                    <Run Text="Use the search box to filter your vocabulary list."/>
                </TextBlock>

                <TextBlock Margin="0,20,0,0" Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                    Tip: If you edit this page later, write any '&amp;' character as
                    <Run FontStyle="Italic" Text="&amp;amp;"/> in XAML.
                </TextBlock>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
