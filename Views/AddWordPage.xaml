<Page
    x:Class="MikoMe.Views.AddWordPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls">

    <Page.KeyboardAccelerators>
        <KeyboardAccelerator Key="V" Modifiers="Control" Invoked="PasteKbd_Invoked"/>
        <KeyboardAccelerator Key="Enter" Modifiers="Control" Invoked="SaveKbd_Invoked"/>
    </Page.KeyboardAccelerators>

    <Grid RowDefinitions="Auto,*" HorizontalAlignment="Stretch">
        <!-- Header -->
        <Border Background="#F7E7CE" Grid.Row="0" Padding="24,14">
            <TextBlock Text="Add word or sentence" FontSize="22" FontWeight="SemiBold" Foreground="Black"/>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1">
            <StackPanel Spacing="16" HorizontalAlignment="Stretch" MaxWidth="1100" Margin="24,20" >
                <Button x:Name="PasteButton" Click="PasteButton_Click" Width="140" Height="40">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE77F;"/>
                        <TextBlock Text="Paste"/>
                    </StackPanel>
                </Button>

                <TextBox x:Name="HanziTextBox"
                         PlaceholderText="Chinese characters"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         ScrollViewer.VerticalScrollBarVisibility="Auto"
                         MinHeight="44"
                         HorizontalAlignment="Stretch"/>

                <TextBox x:Name="PinyinTextBox"
                         PlaceholderText="Pinyin"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         ScrollViewer.VerticalScrollBarVisibility="Auto"
                         MinHeight="44"
                         HorizontalAlignment="Stretch"/>

                <TextBox x:Name="EnglishTextBox"
                         PlaceholderText="English"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         ScrollViewer.VerticalScrollBarVisibility="Auto"
                         MinHeight="44"
                         HorizontalAlignment="Stretch"/>

                <Button x:Name="SaveButton" Content="Add" Width="160" Height="44" Click="Save_Click" HorizontalAlignment="Center"/>
                <TextBlock x:Name="StatusText" Foreground="#995C00" TextWrapping="Wrap" />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
