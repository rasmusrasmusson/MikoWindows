<Page
    x:Class="MikoMe.Views.EditWordPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="24" RowSpacing="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#FFF3E6D8" Padding="24,18">
            <TextBlock Text="Edit Vocabulary"
                       FontSize="28"
                       FontWeight="SemiBold"
                       Foreground="Black"/>
        </Border>

        <!-- Form -->
        <StackPanel Grid.Row="1" Spacing="12">
            <TextBox x:Name="HanziTextBox" Header="Hanzi"/>
            <TextBox x:Name="PinyinTextBox" Header="Pinyin"/>
            <TextBox x:Name="EnglishTextBox" Header="English"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="12">
            <Button Content="Delete" Click="Delete_Click" Background="Firebrick" Foreground="White"/>
            <Button Content="Save" Click="Save_Click" Background="DarkGreen" Foreground="White"/>
        </StackPanel>
    </Grid>
</Page>
